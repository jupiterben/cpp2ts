    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Current TS File",
            "type": "node",
            "request": "launch",
            "args": [
                "./${fileBasename}"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${fileDirname}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}